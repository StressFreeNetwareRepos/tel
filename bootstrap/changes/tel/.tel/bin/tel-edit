#!/usr/bin/env bash
#cd ~/../ 
#export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
if [ -z $1 ] ; then
	selected_file=$(fzf --layout=reverse --cycle --color=16 --info=inline --prompt="  Edit: ")
else
	file_search=$(echo "$@")
	selected_file=$(fzf -e --layout=reverse --cycle --color=16 --query="$file_search" --info=inline --prompt="  Edit: " --select-1)
fi

if [ -z $selected_file ] ; then
#	echo 'No file chosen - Exiting...'
	exit 1
else
	curr_dir=$(pwd)
	printf "\e[38;5;2m Editing\e[m%s file: $curr_dir/$selected_file"
	$EDITOR $selected_file
	echo "$editor_output"
fi

